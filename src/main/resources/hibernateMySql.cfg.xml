<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/casetapruebas?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">ricardo</property>
    <property name="hibernate.connection.password">ricardo</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.connection.pool_size">30</property>
    <property name="hibernate.cache.use_second_level_cache">false</property>
    <mapping resource="com/selmec/plantaselmec/Models/Cariles.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Roles.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Planta.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Lecturas.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Ensamblebase.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Iteraciones.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Pruebabase.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Motores.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Usuarios.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Clientes.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Ubicaciones.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Incidencias.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Produccion.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Cargasubita.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Generador.hbm.xml"/>
    <mapping resource="com/selmec/plantaselmec/Models/Contacto.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
